{# templates/index.html.twig #}
{% trans_default_domain 'gui' %}
{% extends 'layout.html.twig' %}
{% block content %}
    <!-- Home ================================================== -->
    <div class="container-fluid">
        <div class="row" id="home">
            <img src="{{ asset('./build/images/homepage.jpg') }}" alt="homepage-image">
                <div class="flash flash-success alert-success text-center">
                    Un email de vérification vous a été envoyé. Merci de le consulter.
                </div>
                <div class="col-xs-12 text-center" id="home-text">
                    <h1>
                        <p class="bold">[{{ env_name }}] -
                            {{ 'welcome_homepage'|trans}}</p>
                    </h1>
                </div>
                {# On affiche tous les messages flash #}
                {% for label, messages in app.session.flashbag.all %}
                    {% for message in messages %}
                        <div class="flash flash-{{ label }} alert-{{ label }} text-center">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div id="arrow-down">
                <a href="#tricks-anchor">
                    <i class="fa fa-arrow-down" style="font-size:30px"></i>
                </a>
            </div>
        </div>
        <div class="container">
            <a class="anchor" id="tricks-anchor"></a>
            <section class="row" id="tricks-list">
                {% for i in 0..14 %}
                    <div class="col-xl-2_4 col-lg-4 col-md-4 col-sm-6 col-xs-6 col trick-thumbnails-div">
                        <article
                            class="trick-thumbnail">
                            <!--<a href="trick-{{ i }}.php">-->
                            <a
                                href="http://localhost/P6-project-flex/public/trick/test">
                                <!--<img src="images/tricks/trick-{{ i }}-thumb.jpg" alt="bla-bla">-->
                                <img src="{{ asset('./build/images/homepage.jpg') }}" alt="thumbnail"></a>
                                <p>bla-bla</p>
                            </article>
                        </div>
                    {% endfor %}
                </section>
            </div>
            <div class="container">
                <section class="row">
                    <button type="button" class="btn btn-primary center-button" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Loading more">Load more</button>
                </section>
            </div>
        {% endblock %}
    