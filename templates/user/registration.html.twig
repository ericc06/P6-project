{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-lg-6">
            <div class="well">
                {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
                {% endif %}
                <form action="{{ path('user_registration') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock" aria-hidden="true"></i> {% trans %}Registration{% endtrans %}</legend>
                        <div class="form-group">
                            <label for="username">{{ 'label.aaausername'|trans }}</label>
                            <input type="text" id="username" name="username" value="{{ last_username }}" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'label.password'|trans }}</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>
                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                        {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>#}
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'action.sign_in'|trans }}
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}