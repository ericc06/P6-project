{# templates/user/notFound.html.twig #}

{% trans_default_domain 'gui' %}

{% extends 'layout.html.twig' %}

{% block content %}
<div class="container full-height-container">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-lg-6">
            <div class="well">
                <h1>{{ 'user_not_found'|trans}}</h1>
                
                <p class="p-404">
                    {{ 'user_profile_does_not_exist'
                        |trans({
                            '%link_start%': '<a href="' ~ path('homepage') ~ '">',
                            '%link_end%': '</a>'
                        })
                        |raw
                    }}
                </p>
                
                <img class="error-page-image" src="{{ asset('./build/images/crash.jpg') }}"
                    alt="404-image" />
            </div>
        </div>
    </div>
</div>
{% endblock %}